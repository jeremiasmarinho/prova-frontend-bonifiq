{
  "version": 2,
  "builds": [
    {
      "src": "widget-app/package.json",
      "use": "@vercel/node",
      "config": { "zeroConfig": true }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/widget/(.*)",
      "dest": "/widget-app/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
